<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_l"
        android:id="@+id/imageButtonBack" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageButtonBack"
        android:id="@+id/spinnerPeriod"
        android:paddingLeft="30dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/spinnerPeriod"
        android:background="@drawable/ic_arrow_r"
        android:id="@+id/imageButtonFwd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageButtonFwd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textTotalKwh"
        android:paddingLeft="50dp"
        android:paddingTop="10dp" />

    <LinearLayout
        android:id="@+id/graph"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/imageButtonBack"></LinearLayout>

</RelativeLayout>
