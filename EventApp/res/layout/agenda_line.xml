<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/agendaItemList"
	android:background="@drawable/listitem"
	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:padding="6dip" >

    <ImageView 
		android:id="@+id/agendaItemImage"
		android:layout_width="60dp"
		android:layout_height="60dp" />

    <TextView
		android:id="@+id/agendaItemTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/agendaItemImage"
		android:textColor="#404040"
		android:textSize="14sp" />

    <TextView
		android:id="@+id/agendaItemSummary"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/agendaItemImage"
		android:layout_below="@+id/agendaItemTitle"
		android:textColor="#606060"
		android:textSize="12sp" />

</RelativeLayout>