	<SlidingDrawer
		android:id="@+id/slidingDrawerProgram"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:content="@+id/content"
		android:handle="@+id/handleProgram"
		android:orientation="horizontal" >
		<Button
			android:id="@+id/handleProgram"
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:drawableTop="@drawable/ic_navigation_drawer" />
		<LinearLayout
			android:id="@+id/content"
			android:layout_width="match_parent"
			android:layout_height="match_parent" >
			<fragment
				android:id="@+id/fragPrg"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="10dp"
				class="com.brassorange.eventapp.ProgramFragment" />
		</LinearLayout>
	</SlidingDrawer>

</RelativeLayout>